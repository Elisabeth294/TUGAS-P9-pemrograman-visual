@model Produk

@{
    ViewData["Title"] = "Edit Produk";
}

<h2>Edit Produk</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Nama" class="form-label">Nama Produk</label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Harga" class="form-label">Harga</label>
        <input asp-for="Harga" class="form-control" />
        <span asp-validation-for="Harga" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
