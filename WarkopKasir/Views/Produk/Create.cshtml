@model Produk
@{
    ViewData["Title"] = "Tambah Produk";
}

<h2>Tambah Produk</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-2">
        <label asp-for="Nama" class="form-label">Nama Produk</label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Harga" class="form-label">Harga</label>
        <input asp-for="Harga" class="form-control" />
        <span asp-validation-for="Harga" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Simpan</button>
    <a asp-action="Index" class="btn btn-secondary">Kembali</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
